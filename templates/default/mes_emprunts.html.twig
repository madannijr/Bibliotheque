{% extends 'base.html.twig' %}

{% block body %}

    <div class="icon-libreoffice">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="title">
                        <h1>Mes Emprunts</h1>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="product-bg">
        <div class="product-bg-white">
            <div class="container">
                <div class="row">
                    <div class="col-xl-3 col-lg-3 col-md-6 col-sm-12">
                        <div class="icon-library">
                            {% for emprunts in emprunts %}
                                <i><img src="{{ asset( emprunts.livre.getImage()) }}" alt="{{ emprunts.livre.getTitre() }}"/></i>
                                <li>{{ emprunts.livre.titre }} - {{ emprunts.dateEmprunt|date('d/m/Y') }} - {{ emprunts.dateDeRetour|date('d/m/Y') }}</li>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}



